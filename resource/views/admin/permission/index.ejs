<div class="row">
	<div class="col-xl-12 col-lg-12 col-md-12 col-sm-10 col-12">
		<%- include(viewPath('layouts/success-messages'), { successMessages }); %>
		<div class="card">
			<h5 class="card-header">دسترسی‌ها</h5>
			<% if (permissions.docs.length) { %>
			<div class="card-body">
				<div class="table-responsive">
					<table class="table table-striped table-bordered first">
						<thead>
							<tr>
								<th>دسترسی‌</th>
								<th>توضیحات</th>
								<th>تنظیمات</th>
							</tr>
						</thead>
						<tbody>
							<% permissions.docs.forEach(permission => { %>
								<tr>
									<td><%- permission.title %></td>
									<td><%- permission.body %></td>
									<td>
										<div class="d-flex">
											<a class="btn btn-sm btn-primary ml-2" href="/admin/permission/edit/<%- permission._id %>">ویرایش</a>
											<form method="POST" action="/admin/permission/<%- permission._id %>?_method=DELETE">
												<button class="btn btn-sm btn-danger" type="submit">حذف</button>
											</form>
										</div>
									</td>
								</tr>
							<% }); %>
						</tbody>
						<tfoot>
							<tr>
								<th>دسترسی‌</th>
								<th>توضیحات</th>
								<th>تنظیمات</th>
							</tr>
						</tfoot>
					</table>
				</div>
			</div>
			<% const { docs, ...rest } = permissions; %>
        	<%- include(viewPath('layouts/pagination'), { pagination: rest, pageUrl: '/admin/permission' }); %>
			<% } else { %>
				<h2 class="text-center m-5">دسترسی‌ای یافت نشد</h2>
			<% } %>
		</div>
	</div>
</div>