<div class="row">
	<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
		<div class="page-header">
			<h2 class="pageheader-title">ویرایش دسترسی‌های سایت</h2>
		</div>
	</div>
</div>

<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12" style="padding-right: 0px;padding-left: 0px;">
	<%- include(viewPath('layouts/error-messages'), { errorMessages }); %>
	<div class="card">
		<h5 class="card-header">ویرایش دسترسی</h5>
		<div class="card-body">
			<form id="validationform" data-parsley-validate="" novalidate="" action="/admin/permission/edit/<%- permission._id %>?_method=PUT" method="POST">
				<div class="form-group row">
					<div class="col">
						<label for="title" class="control-label font-weight-bold">دسترسی</label>
						<input type="text" class="form-control" name="title" id="title"
							placeholder="عنوان را وارد کنید" value="<%- permission.title %>">
					</div>
				</div>
				<div class="form-group row">
					<div class="col">
						<label for="body" class="control-label font-weight-bold">توضیحات</label>
						<textarea rows="5" class="form-control" name="body" id="body"
							placeholder="توضیحات را وارد کنید"><%- permission.body %></textarea>
					</div>
				</div>
				<div class="form-group row text-right">
					<div class="col col-sm-10 col-lg-9 offset-sm-1 offset-lg-0">
						<button type="submit" class="btn btn-space btn-primary">ویرایش</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>