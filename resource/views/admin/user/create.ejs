<div class="row">
	<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
		<div class="page-header">
			<h2 class="pageheader-title">افزودن کاربران جدید به وب سایت</h2>
		</div>
	</div>
</div>


<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12" style="padding-right: 0px;padding-left: 0px;">
	<%- include(viewPath('layouts/error-messages'), { errorMessages }); %>
	<div class="card">
		<h5 class="card-header">ایجاد کاربر جدید</h5>
		<div class="card-body">
			<form id="validationform" data-parsley-validate="" novalidate="" action="/admin/user/create" method="POST">
				<div class="form-group row">
					<div class="col">
						<label for="name" class="control-label font-weight-bold">نام و نام خانوادگی</label>
						<input type="name" class="form-control" name="name" id="name" required
							placeholder="نام و نام خانوادگی را وارد کنید">
					</div>
				</div>
				<div class="form-group row">
					<div class="col">
						<label for="email" class="control-label font-weight-bold">ایمیل</label>
						<input type="email" class="form-control" name="email" id="email" required
							placeholder="ایمیل را وارد کنید">
					</div>
				</div>
				<div class="form-group row">
					<div class="col">
						<label for="password" class="control-label font-weight-bold">پسورد</label>
						<input type="password" class="form-control" name="password" id="password" required>
					</div>
				</div>
				<div class="form-group row text-right">
					<div class="col col-sm-10 col-lg-9 offset-sm-1 offset-lg-0">
						<button type="submit" class="btn btn-space btn-primary">افزودن</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>