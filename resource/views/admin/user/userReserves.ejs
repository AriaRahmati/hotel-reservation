<div class="row">
	<div class="col-xl-12 col-lg-12 col-md-12 col-sm-10 col-12">
		<%- include(viewPath('layouts/success-messages'), { successMessages }); %>
		<div class="card">
			<h5 class="card-header">اتاق‌های رزرو شده توسط - <a href="#"><%- `${user.name} - ${user.email}` %></a></h5>
			<div class="card-body">
				<div class="table-responsive">
					<table class="table table-striped table-bordered first">
						<thead>
							<tr>
								<th>نام</th>
								<th>نوع</th>
								<th>توضیحات</th>
								<th>قیمت</th>
								<th>حداکثر نفرات</th>
								<th>تنظیمات</th>
							</tr>
						</thead>
						<tbody>
							<% user.reservedRooms.forEach(room => { %>
								<tr>
									<td><a href="<%- room.path() %>"><%- room.title %></a></td>
									<td>
										<% if (room.type === 'normal') { %>
											عادی
										<% } else if (room.type === 'vip') { %>
											ویژه
										<% } else { %>
											نامشخص
										<% } %>
									</td>
									<td><%- room.body %> </td>
									<td><%- room.price.toLocaleString('fa-IR') %> تومان</td>
									<td><%- room.maxPeople.toLocaleString('fa-IR') %> نفر</td>
									<td>
										<div class="d-flex">
											<form method="POST" action="/admin/user/reserves/<%- user._id %>/<%- room._id %>?_method=DELETE">
												<button class="btn btn-sm btn-danger" type="submit">حذف</button>
											</form>
										</div>
									</td>
								</tr>
							<% }); %>
						</tbody>
						<tfoot>
							<tr>
								<th>نام</th>
								<th>نوع</th>
								<th>توضیحات</th>
								<th>قیمت</th>
								<th>حداکثر نفرات</th>
								<th>تنظیمات</th>
							</tr>
						</tfoot>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>