<div class="row">
	<div class="col-xl-12 col-lg-12 col-md-12 col-sm-10 col-12">
		<%- include(viewPath('layouts/success-messages'), { successMessages }); %>
		<div class="card">
			<h5 class="card-header">اتاق‌های رزرو شده توسط - <a href="#"><%- `${user.name} - ${user.email}` %></a></h5>
			<% if (user.payments.length) { %>
			<div class="card-body">
				<div class="table-responsive">
					<table class="table table-striped table-bordered first">
						<thead>
							<tr>
								<th>نام</th>
								<th>نوع</th>
								<th>توضیحات</th>
								<th>قیمت</th>
								<th>حداکثر نفرات</th>
								<th>تنظیمات</th>
							</tr>
						</thead>
						<tbody>
							<% user.payments.forEach(payment => { %>
								<tr>
									<td><a href="<%- payment.room.path() %>"><%- payment.room.title %></a></td>
									<td>
										<% if (payment.room.type === 'normal') { %>
											عادی
										<% } else if (payment.room.type === 'vip') { %>
											ویژه
										<% } else { %>
											نامشخص
										<% } %>
									</td>
									<td><%- payment.room.body %> </td>
									<td><%- payment.price.toLocaleString('fa-IR') %> تومان</td>
									<td><%- payment.room.maxPeople.toLocaleString('fa-IR') %> نفر</td>
									<td>
										<div class="d-flex">
											<% if (payment.canceledByAdmin) { %>
												<p class="text text-danger">لغو شده توسط مدیر</p>
											<% } else if (payment.canceledByUser) { %>
												<p class="text text-danger">لغو شده توسط کاربر</p>
											<% } else { %>
											<form method="POST" action="/admin/user/reserves/<%- user._id %>/<%- payment._id %>?_method=DELETE">
												<button class="btn btn-sm btn-danger" type="submit">لغو</button>
											</form>
											<% } %>
										</div>
									</td>
								</tr>
							<% }); %>
						</tbody>
						<tfoot>
							<tr>
								<th>نام</th>
								<th>نوع</th>
								<th>توضیحات</th>
								<th>قیمت</th>
								<th>حداکثر نفرات</th>
								<th>تنظیمات</th>
							</tr>
						</tfoot>
					</table>
				</div>
			</div>
			<% } else { %>
				<h2 class="text-center m-5">رزروی برای کاربر یافت نشد</h2>
			<% } %>
		</div>
	</div>
</div>