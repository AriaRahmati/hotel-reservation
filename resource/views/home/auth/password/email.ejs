<div class="container">
	<div class="row pt-5 justify-content-center">
		<div class="col-8">
			<div class="card card-default">
				<div class="card-header">
					<h5>بازیابی رمز عبور</h5>
				</div>
				<div class="card-body">
					<form class="form-horizontal" method="POST" action="/auth/password/reset" novalidate>

						<%- include(viewPath('layouts/error-messages'), { errorMessages }); %>

						<div class="form-group">
							<label for="password" class="control-label">رمز عبور جدید</label>
							<input id="password" type="password" class="form-control" name="password" required>
						</div>

						<div class="form-group">
                            <%- recaptcha -%>
                        </div>

						<div class="form-group">
							<button type="submit" class="btn btn-primary">تغییر رمز عبور</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>